<h2>New post</h2>
<div>
  <form ng-submit="newPost()" style="margin-top:30px;">
    <h3>New post</h3>

    <div class="form-group">
      <input type="text" class="form-control" placeholder="title" ng-model="postName"/>
    </div>
    <div class="form-group">
      <input type="text" class="form-control" placeholder="text" ng-model="postBody"/>
    </div>
    <div ng-repeat="h in headings">
      <input type="radio" class="radioButtons" value="{{h.id}}">{{h.title}}</input>
    </div>
    <button type="submit" class="btn btn-primary">Post</button>
  </form>
</div>